<UserControl x:Class="Weather_Forecaster.RainVideo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Weather_Forecaster"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="rainGrid">
        <Label Name="drop1" Content="💧" FontSize="10" Foreground="White" Margin="10,0,0,0"/>
        <Label Name="drop2" Content="💧" FontSize="11" Foreground="White" Margin="20,0,0,0"/>
        <Label Name="drop3" Content="💧" FontSize="10" Foreground="White" Margin="30,0,0,0"/>
        <Label Name="drop4" Content="💧" FontSize="9" Foreground="White" Margin="40,0,0,0"/>
        <Label Name="drop5" Content="💧" FontSize="11" Foreground="White" Margin="50,0,0,0"/>
        <Label Name="drop6" Content="💧" FontSize="10" Foreground="White" Margin="60,0,0,0"/>
        <Label Name="drop7" Content="💧" FontSize="9" Foreground="White" Margin="70,0,0,0"/>
        <Label Name="drop8" Content="💧" FontSize="10" Foreground="White" Margin="80,0,0,0"/>
        <Label Name="drop9" Content="💧" FontSize="11" Foreground="White" Margin="90,0,0,0"/>

    </Grid>
</UserControl>
