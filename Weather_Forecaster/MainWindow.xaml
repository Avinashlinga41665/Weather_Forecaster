            <ListBox Visibility="Visible" Foreground="White" x:Name="ListBox" Height="145" Width="200" Margin="-425,-103,624,180" SelectedIndex="0" SelectionChanged="ListBox_SelectionChanged" Grid.ColumnSpan="2">
